{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@user-management/shared": ["packages/shared/src"]
    },
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "apps/backend" },
    { "path": "apps/frontend" },
    { "path": "packages/shared" }
  ]
}
